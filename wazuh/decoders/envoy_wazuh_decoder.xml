<decoder name="envoy-logs">
  <program_name>envoy</program_name>
  <json>
    <field name="timestamp" value="timestamp"/>
    <field name="method" value="method"/>
    <field name="path" value="path"/>
    <field name="protocol" value="protocol"/>
    <field name="response_code" value="response_code"/>
    <field name="response_flags" value="response_flags"/>
    <field name="bytes_received" value="bytes_received"/>
    <field name="bytes_sent" value="bytes_sent"/>
    <field name="duration" value="duration"/>
    <field name="x_forwarded_for" value="x_forwarded_for"/>
    <field name="user_agent" value="user_agent"/>
    <field name="request_id" value="request_id"/>
    <field name="authority" value="authority"/>
    <field name="upstream_host" value="upstream_host"/>
    <field name="request_body" value="request_body"/>
  </json>
</decoder>
